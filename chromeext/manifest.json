{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "Save For Later",
  "description": "Save your favorite articles to read later!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "tab-icon.png",
    "default_title": "Save For Later"
  },
  "permissions": ["activeTab", "tabs", "http://localhost:4000/auth/me"]
}
